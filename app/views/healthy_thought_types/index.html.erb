<p id="notice"><%= notice %></p>

<h1>Manage Healthy Thought Types</h1>

<%= link_to '+ Create New', new_healthy_thought_type_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Explanation</th>
      <th>Example</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @healthy_thought_types.each do |healthy_thought_type| %>
      <tr>
        <td><%= link_to healthy_thought_type.name, edit_healthy_thought_type_path(healthy_thought_type) %></td>
        <td><%= healthy_thought_type.explanation %></td>
        <td><%= healthy_thought_type.example %></td>
        <td><%= link_to 'Edit', edit_healthy_thought_type_path(healthy_thought_type) %></td>
        <td><%= link_to 'Delete', healthy_thought_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

