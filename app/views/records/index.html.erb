<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
      <th>Thought about event</th>
      <th>Feeling about thought</th>
      <th>Unhealthy action</th>
      <th>Unhealthy Thought Type</th>
      <th>Healthy Thought Type</th>
      <th>Reframe statement</th>
      <th>Healthy action</th>
      <th>Star</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= record.event %></td>
        <td><%= record.thought_about_event %></td>
        <td><%= record.feeling_about_thought %></td>
        <td><%= record.unhealthy_action %></td>
        <td><%= record.unhealthy_thought_type.name %></td>
        <td><%= record.healthy_thought_type.name %></td>
        <td><%= record.reframe_statement %></td>
        <td><%= record.healthy_action %></td>
        <td><%= record.star %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

