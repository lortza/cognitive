<p id="notice"><%= notice %></p>

<h1>Manage Unhealthy Thought Types</h1>

<%= link_to '+ Create New', new_unhealthy_thought_type_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Explanation</th>
      <th>Example</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @unhealthy_thought_types.each do |unhealthy_thought_type| %>
      <tr>
        <td><%= link_to unhealthy_thought_type.name, edit_unhealthy_thought_type_path(unhealthy_thought_type) %></td>
        <td><%= unhealthy_thought_type.explanation %></td>
        <td><%= unhealthy_thought_type.example %></td>
        <td><%= link_to 'Edit', edit_unhealthy_thought_type_path(unhealthy_thought_type) %></td>
        <td><%= link_to 'Delete', unhealthy_thought_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
